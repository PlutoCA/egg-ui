{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "lib": [
      "ES6",
      "DOM"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/components/*"]
    },
    "types": []
  },
  "include": ["src/components/**/*", "src/index.ts"]
}
