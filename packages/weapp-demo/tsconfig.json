{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["DOM", "ES2015"]
  },
  "include": ["src/**/*", "typings/**/*", "node_modules/@redchili/egg-ui"],
  "exclude": ["node_modules"]
}
