.egg-button {
    background-color:#6979F8 ;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    outline: none;
    box-sizing: border-box;
}

.egg-button.large {
    width: 360rpx;
    height: 80rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
}
.egg-button.large.round {
  border-radius: 40rpx;
}

.egg-button.medium {
    width: 300rpx;
    height: 70rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
}
.egg-button.medium.round {
  border-radius: 35rpx;
}

.egg-button.small {
    width: 240rpx;
    height: 60rpx;
    border-radius: 8rpx;
    font-size: 22rpx;
}

.egg-button.small.round {
  border-radius: 30rpx;
}

.egg-button.light {
    background-color: #E5E7FA;
    color: #6979F8;
}

.egg-button.reverse {
    background-color: white;
    color: #6979F8;
    border-width: 2rpx;
    border-style: solid;
    border-color: #6979F8;
}

.egg-button.disable {
    border-color: #ECE9F1;
    color: #D0C9D6;
}

.egg-button.reverse.disable {
    border-color: #ECEBED;
    color: #ECEBED;
}

/* reset default button style */
button::after {
    border: none;
}

/* animation */

@keyframes heartBeat {
    0% {
      transform: scale(1);
    }
  
    /* 14% {
      transform: scale(1.3);
    } */
  
    /* 28% {
      transform: scale(1.3);
    } */
  
    42% {
      transform: scale(1.3);
    }
  
    70% {
      transform: scale(1);
    }
  }
  
  .heartBeat {
    animation-name: heartBeat;
    animation-duration: 0.6s;
    animation-timing-function: cubic-bezier(.09,.59,.82,.32);
  }
